
  <h1>Topics</h1>
  <% if current_user %>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  <% end %>


  <div class="container">
    <div class="col-md-8">
  <!-- #7 -->
      <% @topics.each do |topic| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
  <!-- #8 -->
              <%= link_to topic.name, topic %>
            </h4>
            <small>
              <%= topic.description %>
            </small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
