<% if current_user %>
  <div class="vote-arrows pull-left">
    <div><%= link_to " ", post_up_vote_path(post), class: 'glyphicon glyphicon-thumbs-up', method: :post %></div>
    <div><strong><%= post.points %></strong></div>
    <div><%= link_to " ", post_down_vote_path(post), class: 'glyphicon glyphicon-thumbs-down', method: :post %></div>
  </div>
<% end %>
